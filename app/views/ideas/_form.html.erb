<% content_for :head do %>
  <%= javascript_include_tag "idea.js" %>
<% end %>

<%= form_for(@idea, :html => { :class => "bp"}) do |f| %>
  <%= f.error_messages %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, :class => "title" %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 4 %>
  </div>
  <div class="field">
    <%= f.label :pain_reliever %><br />
    <%= f.text_field :pain_reliever, :class => "title" %>
  </div>
  <div class="field">
    <%= f.label :money_multiplier %><br />
    <%= f.text_field :money_multiplier, :class => "title" %>
  </div>
  <span id="sliders">
    <div class="field">
      <%= f.label :demand %><br />
      <%= f.text_field :demand, :size => 2 %>
      <div id="demand-slider" class="slider"></div>
    </div>
    <br />
    <div class="field">
      <%= f.label :cost %><br />
      <%= f.text_field :cost, :size => 2 %>
      <div id="cost-slider" class="slider"></div>
    </div>
    <br />
    <div class="field">
      <%= f.label :frequency %><br />
      <%= f.text_field :frequency, :size => 2 %>
      <div id="frequency-slider" class="slider"></div>
    </div>
    <br />
    <div class="field">
      <%= f.label :revenue %><br />
      <%= f.text_field :revenue, :size => 2 %>
      <div id="revenue-slider" class="slider"></div>
    </div>
  </span>
  <br />
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
